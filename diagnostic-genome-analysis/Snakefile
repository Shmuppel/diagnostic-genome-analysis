# PIPELINE RULES.
rule report:
	input:
		expand("runs/{sample}/results/{sample}_{num}_fastqc.html",
			   sample=config["samples"],
			   num=["R1", "R2"]),
		expand("runs/{sample}/results/{sample}.{genome_build}_multianno.txt",
			   sample=config["samples"],
			   genome_build = config["genome_build"])